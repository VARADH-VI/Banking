<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bckgnd2"
    android:backgroundTintMode="src_over"
    android:backgroundTint="#9EFFFFFF">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="\n"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider"/>

    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nBanking App By:"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Varadh V.I"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#BC03DAC5"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Submitted to :"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@id/a"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G.R.I.P by Sparks Foundation"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#BC03DAC5"
        android:layout_below="@id/b"
        android:layout_marginBottom="25dp"/>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@drawable/divider"/>


    <ImageView
        android:layout_marginTop="110dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/view_users"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/rounded_button"
        android:text="Transaction"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold"
        style="@style/AppTheme"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="170dp">
    </Button>


</LinearLayout>